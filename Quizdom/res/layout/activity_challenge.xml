<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback" >

    <ImageButton
        android:id="@+id/challenge_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:src="@drawable/friend2" />

    <ImageButton
        android:id="@+id/challenge_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/challenge_friend"
        android:layout_below="@+id/challenge_friend"
        android:layout_marginTop="18dp"
        android:background="#00000000"
        android:src="@drawable/random" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/challenge_friend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="Who would you like to challenge?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/challenge_random"
        android:background="@drawable/answerbutton"
        android:text="Friends"
        android:textColor="#ffffff" />

</RelativeLayout>
